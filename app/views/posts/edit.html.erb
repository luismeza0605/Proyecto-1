<h1>Edit Post</h1>

<%= form_with model: @post, local: true, html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :images, class: "form-label" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
    <p class="form-text text-muted">Puedes subir múltiples imágenes.</p>
  </div>

  <div class="form-group">
    <%= form.submit "Update Post", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', posts_path, class: "btn btn-secondary" %>
